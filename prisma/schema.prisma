generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PaymentMethod {
  CASH
  DEBIT
  CREDIT
  PIX
}

enum UserType {
  CLIENT 
  ADMIN
}

model Address {
  id        Int      @id @default(autoincrement())
  street    String
  number    String
  district  String
  city      String
  state     String
  zipCode   String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Order {
  id            Int      @id @default(autoincrement())
  client        User
  paymentMethod PaymentMethod
  status        String
  createdBy     User
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

}
model OrderItem {
  order Order
  quantity Int
  List item
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Category {
  id          Int      @id @default(autoincrement())
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model Item {
  id         Int      @id @default(autoincrement())
  description String
  unitPrice   Double
  category    Category
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  address   Address
  phone     String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}